{
  "compilerOptions": {
    "module": "ESNext",
    "target": "ESNext",
    "sourceMap": true,
    "lib": [
      "ESNext",
      "DOM"
    ],
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "emitDeclarationOnly": true,
    "declaration": true,
    "extendedDiagnostics": true,
    /* fix vite alias 无法识别的问题 */
    "baseUrl": ".",
    "paths": {
      "@/*": [
        "./src/*"
      ]
    }
  },
  "include": [
    "./src/*.ts",
    "./types/**.d.ts"
  ],
  "exclude": [
    "node_modules"
  ]
}
